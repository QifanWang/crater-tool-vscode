{
	"name": "crater",
	"displayName": "CraTer",
	"description": "Extension CraTer is to identify whether or not the root cause (i.e., the faulty-code-line) of Java crashes reside in their stack traces.",
	"version": "0.0.2",
	"publisher": "yongfenggu",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Gu-Youngfeng/crater-tool-vscode"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:crater.predict",
		"onCommand:crater.terminal"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "crater.predict",
				"title": "Predict this Java crash (CraTer)"
			},
			{
				"command": "crater.terminal",
				"title": "Capture this stack trace (CraTer)"
			}
		],
		"configuration": {
			"title": "Terminal Capture",
			"type": "object",
			"properties": {
				"terminalCapture.enable": {
					"type": "boolean",
					"description": "If false, disable the terminal capture extension",
					"default": true
				},
				"terminalCapture.useClipboard": {
					"type": "boolean",
					"description": "If false, use the cache mode that tracks all history",
					"default": true
				}
			}
		},
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus",
					"command": "crater.predict",
					"group": "navigation"
				},
				{
					"when": "editorFocus",
					"command": "crater.terminal",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
